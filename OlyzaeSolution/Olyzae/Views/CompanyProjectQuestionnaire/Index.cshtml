@model IEnumerable<NihonUnisys.Olyzae.Models.Questionnaire>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_AccountUserProjectMenuPartial", (NihonUnisys.Olyzae.Models.Project)ViewBag.Project)

<h2>アンケート一覧</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i>&nbsp;アンケートを新規作成</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Questioned)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Edit", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Questioned)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id = item.ID }) |
            @Html.ActionLink("削除", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
