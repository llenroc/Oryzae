@using NihonUnisys.Olyzae.Models
@model NihonUnisys.Olyzae.Models.ProjectGroup

@{
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";

    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>プロジェクト「@ViewBag.ProjectName」のグループ</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.GroupName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupName)
                @Html.ValidationMessageFor(model => model.GroupName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.Hidden("Accessibility", NihonUnisys.Olyzae.Models.ProjectGroupAccessibility.Public.ToString())
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("一覧へ戻る", "Index", new { projectId = (int?)ViewBag.ProjectId })
</div>
