@using NihonUnisys.Olyzae.Models
@model IEnumerable<Theme>

@{
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
    ViewBag.Title = "Index";
    var project = (Project)ViewBag.Project;
}

<h2>課題一覧</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            受付開始日時
        </th>
        <th>
            受付終了日時
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", null, new { projectId = project.ID, themeId = item.ID })">
                @Html.DisplayFor(modelItem => item.Name)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (item.Duration.From.HasValue)
            {
                <text>@Html.DisplayFor(modelItem => item.Duration.From.Value)</text>
            }
        </td>
        <td>
            @if (item.Duration.To.HasValue)
            {
                <text>@Html.DisplayFor(modelItem => item.Duration.To.Value)</text>
            }
        </td>
    </tr>
}

</table>
