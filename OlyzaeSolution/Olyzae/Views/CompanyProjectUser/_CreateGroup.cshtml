<!-- Modal -->
<div class="modal" id="addGroup" tabindex="-1" role="dialog" aria-labelledby="addGroupLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateGroup", "CompanyProjectUser", new { returnUrl = Request.Path }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="addGroupLabel">新しくグループを追加する</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.Label("CreateGroup.GroupName", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("CreateGroup.GroupName")
                                @Html.ValidationMessage("CreateGroup.GroupName")
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("CreateGroup.GroupName", new {@class="control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("CreateGroup.Accessibility")
                                @Html.ValidationMessage("CreateGroup.Accessibility")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">キャンセル</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            }
        </div>
    </div>
</div>
