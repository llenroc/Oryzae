@model NihonUnisys.Olyzae.Models.Project
@{
    var iconSource = (Model.Icon.HasValue)
        ? Url.Action("ProjectIcon", "Document", new { id = Model.ID })
        : "data:image/svg+xml;base64,";
}
<img id="projectIcon_@Model.ID" class="img-thumbnail" src="@iconSource" alt="アイコンのサムネール" style="width:100px;height:100px" />