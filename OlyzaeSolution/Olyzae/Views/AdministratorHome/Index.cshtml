@model IEnumerable<NihonUnisys.Olyzae.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>システム管理者</h2>

<p>
    @Html.ActionLink("企業アカウントを追加", "CreateAccountUser", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.ActionLink("編集", "Edit", new { companyId = item.ID }) |
                @Html.ActionLink("詳細", "Details", new { companyId = item.ID }) |
                @Html.ActionLink("削除", "Delete", new { companyId = item.ID })
            </td>
        </tr>
    }

</table>
